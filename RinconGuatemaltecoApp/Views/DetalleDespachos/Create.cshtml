@model RinconGuatemaltecoApp.Models.DetalleDespacho

<h2 class="text-center">Agregar Producto al Despacho</h2>

<form asp-action="Create">
    <input type="hidden" asp-for="DespachoID" />

    <div class="form-group mb-3">
        <label for="ProductoID" class="form-label">Producto</label>
        <select asp-for="ProductoID" asp-items="ViewBag.Productos" class="form-control">
            <option value="">Seleccione un producto</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="Cantidad" class="form-label">Cantidad</label>
        <input asp-for="Cantidad" class="form-control" type="number" min="1" />
    </div>

    <button type="submit" class="btn btn-success">Agregar</button>
</form>
