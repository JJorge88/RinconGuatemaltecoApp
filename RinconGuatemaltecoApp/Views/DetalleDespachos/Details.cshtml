@model RinconGuatemaltecoApp.Models.Despacho

<h2>Detalles del Despacho</h2>

<div>
    <h4>Cliente: @Model.Cliente.Nombre</h4>
    <p>Fecha: @Model.Fecha.ToShortDateString()</p>
    <p>Total: Q@Model.Total.ToString("F2")</p>
</div>

<h3>Productos</h3>
<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DetalleDespachos)
        {
            <tr>
                <td>@item.Producto.Nombre</td>
                <td>@item.Cantidad</td>
                <td>Q@item.Subtotal.ToString("F2")</td>
                <td>
                    <a asp-action="Delete" asp-controller="DetalleDespachos" asp-route-id="@item.DetalleID" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="DetalleDespachos" asp-route-despachoId="@Model.DespachoID" class="btn btn-primary">
    Agregar Producto
</a>
