@model RinconGuatemaltecoApp.Models.Despacho

<h2 class="text-center">Crear Despacho</h2>

<form asp-action="Create">
    <div class="form-group mb-3">
        <label for="ClienteID" class="form-label">Cliente</label>
        <select asp-for="ClienteID" asp-items="ViewBag.Clientes" class="form-control">
            <option value="">Seleccione un cliente</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="Fecha" class="form-label">Fecha</label>
        <input asp-for="Fecha" class="form-control" type="date" />
    </div>

    <div class="form-group mb-3">
        <label for="Total" class="form-label">Total</label>
        <input asp-for="Total" class="form-control" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
</form>
